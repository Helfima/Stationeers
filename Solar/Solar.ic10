# Solar Panel Control
# Sensor: port see south
# Solar Panel: port see west
define TYPE_SOLAR_HEAVY -934345724
define TYPE_SENSOR 1076425094
sb TYPE_SENSOR Mode 0
start:
lb r0 TYPE_SENSOR Horizontal 1
lb r1 TYPE_SENSOR Vertical 1
sub r1 75 r1
div r1 r1 1.5
sb TYPE_SOLAR_HEAVY Horizontal r0
sb TYPE_SOLAR_HEAVY Vertical r1
j start